<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="433dp"
        android:layout_height="121dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@android:drawable/screen_background_dark"
        tools:ignore="MissingConstraints,VisualLintBounds"
        tools:layout_editor_absoluteX="-11dp"
        tools:layout_editor_absoluteY="-3dp" />

    <ImageButton
        android:id="@+id/btnmarvel"
        android:layout_width="347dp"
        android:layout_height="164dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:contentDescription="TODO"
        android:onClick="abrirmarvel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.353"
        app:srcCompat="@drawable/marvell"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText,NotSibling" />

    <ImageButton
        android:id="@+id/btndccomics"
        android:layout_width="299dp"
        android:layout_height="152dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="TODO"
        android:onClick="abrirdc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmarvel"
        app:srcCompat="@drawable/dcc"
        tools:ignore="ContentDescription,HardcodedText,NotSibling,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="32dp"
        android:text="@string/escolha_um_tema"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="413dp"
        android:layout_height="46dp"
        android:contentDescription="TODO"
        app:srcCompat="@android:drawable/screen_background_dark"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,VisualLintBounds"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="685dp" />

</androidx.constraintlayout.widget.ConstraintLayout>